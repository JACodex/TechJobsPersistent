@using TechJobsPersistent.ViewModels;

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" />
        <span></span>
    </div>

    <div class="form-group">
        <label >Select a Job</label>
        <select name="Jobs">
            @foreach(var employer in ViewBag.Employers)
            {
             <option value="@employer.Id">@employer.Name</option>           
            }

        </select>
        <div>
            <a asp-controller="Employer" asp-action="Add">Dont see Job? Click here to add!</a>
        </div>
        <span></span>
    </div>

    <input type="submit" value="Add Job" />
</form>

